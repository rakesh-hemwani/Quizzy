<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nbnb"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtquestion"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="40sp"
        android:layout_weight="20"
        android:background="@drawable/textview_back"
        android:gravity="center"
        android:shadowColor="@color/colorAccent"

        android:fontFamily="cursive"


        android:text="whats is the pahe of lemon jkdkl sjsh sjs sjhs jsh "
        android:textSize="30sp" />

    <ProgressBar
        android:id="@+id/quizpb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:outlineAmbientShadowColor="#ffffff" />

    <TextView
        android:id="@+id/txtquizStat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:textColor="#FFFFFF"
        android:hint="nnnn"

        android:gravity="center"
        android:textSize="35sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="40"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn3True"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="33"
            android:background="@drawable/button_background"
            android:text="b"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn2Wrong"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="12dp"

            android:layout_weight="33"

            android:background="@drawable/button_background"
            android:text="fg"
            android:textSize="18sp" />


        <Button
            android:id="@+id/btn4Wrong"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="33"
            android:background="@drawable/button_background"
            android:text="fg"
            android:textSize="18sp" />


    </LinearLayout>


</LinearLayout>
